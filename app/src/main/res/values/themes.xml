<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.StoryApp" parent="android:Theme.Material.Light.NoActionBar">
        <item name="colorPrimary">@color/navy_500</item>
        <item name="colorPrimaryVariant">@color/navy_200</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/navy_500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_splash</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.StoryApp</item>
    </style>

</resources>